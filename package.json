{
  "name": "@beans/agent",
  "version": "0.1.0",
  "description": "AI Agent Framework - A modular, extensible AI agent with dynamic profiles",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "start": "node scripts/start.js",
    "dev": "tsx packages/cli/src/index.ts",
    "dev:watch": "tsx watch packages/cli/src/index.ts",
    "build": "npm run build:core && npm run build:cli",
    "build:core": "npm run build --workspace @beans/core",
    "build:cli": "npm run build --workspace @beans/cli",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "node scripts/run-e2e-tests.js",
    "test:e2e:watch": "vitest --config vitest.e2e.config.ts",
    "test:report": "tsx scripts/generate-test-report.ts",
    "test:report:json": "tsx scripts/generate-test-report.ts --json",
    "test:report:gemini": "tsx scripts/generate-test-report.ts --gemini",
    "test:report:save": "tsx scripts/generate-test-report.ts --gemini --save",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "preflight": "npm run build && npm run test && npm run typecheck && npm run lint",
    "clean": "rm -rf packages/*/dist node_modules/.cache && find packages -name '*.js' -path '*/src/*' -delete && find packages -name '*.js.map' -path '*/src/*' -delete && find packages -name '*.d.ts' -path '*/src/*' -delete && find packages -name '*.d.ts.map' -path '*/src/*' -delete"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.20.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.0",
    "zod": "^3.22.0"
  }
}
